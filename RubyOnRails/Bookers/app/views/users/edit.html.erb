<div class="body">
  <div class="container">
    <p id ="notice"></p>
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
     <div class="field">
         <%= f.label :name, "Name" %>
         <br>
         <%= f.text_field :name %>
     </div>
     <div class="field">
         <%= f.label :profile_image, "Image" %>
         <br>
         <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
     </div>
     <div class="field">
       <%= f.label :introduction, "Introduction" %>
       <br>
       <%= f.text_area :introduction %>
     </div>
     <%= f.submit "Update User" %>
    <% end %>
  </div>
</div>